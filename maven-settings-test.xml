<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <mirrors>
        <mirror>
            <id>testing-repository</id>
            <name>Testing Repository</name>
            <url>http://localhost:8888/repository</url>
            <mirrorOf>*</mirrorOf>
        </mirror>
    </mirrors>
    <servers>
        <server>
            <id>testing-repository</id>
            <username>the-repository-username</username>
            <password>the-repository-password</password>
        </server>
        <server>
            <id>testing-snapshots</id>
            <username>the-snapshot-username</username>
            <password>the-snapshot-password</password>
        </server>
        <server>
            <id>testing-deploy</id>
            <username>the-deploy-username</username>
            <password>the-deploy-password</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>test</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <id>testing-snapshots</id>
                    <url>http://localhost:8888/repository</url>
                    <snapshots>
                        <enabled>true</enabled>
                        <checksumPolicy>fail</checksumPolicy>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>
        </profile>
    </profiles>
</settings>
